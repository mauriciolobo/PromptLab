{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "A minimal Electron application with JavaScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "start": "electron-vite preview",
