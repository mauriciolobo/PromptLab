    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.5"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.0.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "prettier": "^3.5.3",
    "vite": "^6.2.6"
